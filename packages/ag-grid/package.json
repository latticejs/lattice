{
  "name": "@latticejs/ag-grid",
  "version": "1.0.1-beta.3",
  "license": "MIT",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/ag-grid.js",
  "files": [
    "dist",
    "styles"
  ],
  "scripts": {
    "build:clean": "rimraf dist/**",
    "build": "npm run build:clean && lattice-scripts build ./src/index.js",
    "build:dev": "npm run build:clean && lattice-scripts build -e development ./src/index.js",
    "release": "npm run build",
    "prepublish": "npm run release",
    "storybook": "start-storybook -p 9016 -c .storybook",
    "test": "jest --no-cache",
    "size": "bundlesize"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "ag-grid-community": "^19.1.4",
    "ag-grid-react": "^19.1.2",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "@latticejs/lattice-scripts": "^1.0.1-beta.2",
    "@storybook/addon-storyshots": "^4.1.13",
    "@storybook/addon-storysource": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^23.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^2.7.0",
    "storybook-readme": "^4.0.5",
    "react-scripts": "^1.1.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTest.js",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.md?$": "markdown-loader-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/images/",
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/cjs/index.js"
    },
    {
      "path": "dist/esm/index.js"
    },
    {
      "path": "dist/umd/gauge.js"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "description": "Standalone Ag Grid Component of Lattice blended with Material UI",
  "main": "dist/cjs/index.js",
  "keywords": ["Lattice", "Ag-Grid", "Ag-Grid Lattice", "Lattice Ag-Grid", "Grid"],
  "author": ""
}
