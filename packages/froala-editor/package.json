{
  "name": "@latticejs/froala-editor",
  "version": "1.0.1-beta.2",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/editor.js",
  "files": [
    "dist",
    "styles",
    "plugins"
  ],
  "scripts": {
    "build:clean": "rimraf dist/**",
    "build": "npm run build:clean && lattice-scripts build ./src/index.js",
    "build:dev": "npm run build:clean && lattice-scripts build -e development ./src/index.js",
    "release": "npm run build",
    "prepublish": "npm run release",
    "storybook": "start-storybook -p 9016 -c .storybook",
    "test": "jest --no-cache",
    "size": "bundlesize"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-external-helpers": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@latticejs/lattice-scripts": "^1.0.1-beta.2",
    "@latticejs/storybook-readme": "^1.0.1-beta.1",
    "@material-ui/core": "^4.8.2",
    "@material-ui/icons": "^4.5.1",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-storyshots": "^6.0.28",
    "@storybook/addon-storysource": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^23.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^2.7.0",
    "storybook-readme": "^5.0.8",
    "typeface-montserrat": "0.0.75",
    "typeface-roboto": "0.0.75"
  },
  "dependencies": {
    "@storybook/addon-essentials": "^6.0.28",
    "froala-editor": "^3.0.6",
    "identity-obj-proxy": "^3.0.0",
    "material-design-icons": "^3.0.1",
    "react-froala-wysiwyg": "^3.0.6"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTest.js",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.md?$": "markdown-loader-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/images/",
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/cjs/index.js"
    },
    {
      "path": "dist/esm/index.js"
    },
    {
      "path": "dist/umd/editor.js"
    }
  ],
  "publishConfig": {
    "access": "public"
  }
}
