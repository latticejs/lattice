{
  "name": "@latticejs/rich-text",
  "version": "1.0.1-beta.1",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/rich-text.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "rimraf dist/**",
    "build": "npm run build:clean && lattice-scripts build ./src/index.js",
    "build:dev": "npm run build:clean && lattice-scripts build -e development ./src/index.js",
    "release": "npm run build",
    "prepublish": "npm run release",
    "storybook": "start-storybook -p 9018 -c .storybook",
    "test": "jest",
    "size": "bundlesize"
  },
  "peerDependencies": {
    "@material-ui/core": "^3.3.0",
    "@material-ui/icons": "^3.0.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@latticejs/lattice-scripts": "^1.0.1-beta.1",
    "@latticejs/storybook-readme": "^1.0.1-beta.0",
    "@material-ui/core": "^3.3.0",
    "@material-ui/icons": "^3.0.0",
    "@storybook/addon-storyshots": "^4.0.2",
    "@storybook/addon-storysource": "^4.0.2",
    "@storybook/react": "^4.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^23.4.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-async-functions": "^6.22.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.1.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-test-renderer": "^16.5.0",
    "rimraf": "^2.6.2",
    "storybook-readme": "^4.0.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.2",
    "slate": "^0.44.6",
    "slate-react": "^0.21.12",
    "immutable": "4.0.0-rc.12",
    "is-hotkey": "^0.1.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTest.js",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.md?$": "markdown-loader-jest"
    },
    "setupFiles": [
      "./test/shim.js"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/cjs/index.js"
    },
    {
      "path": "dist/esm/index.js"
    },
    {
      "path": "dist/umd/rich-text.js"
    }
  ],
  "publishConfig": {
    "access": "public"
  }
}
